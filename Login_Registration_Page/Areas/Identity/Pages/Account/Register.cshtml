@page
@model RegisterModel

<script>
    function validateForm() {
        var x = document.forms["registerForm"].value;
        if (x == "" || x == null) {
            alert("Invalid or incomplete information.");
            return false;
        }
    }
</script>

<body style="margin-top:25px; background-color:darkmagenta">
    <h1 align="center">Register</h1>
    <div align="center">
        <div class="col-md-4">
            <section>
                <img src="~/lib/pinkscribble.png" class="pinkscribble" style="top:10px; left:250px; width:1000px; height:auto" />
            </section>
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" name="registerForm" onsubmit="return validateForm()">
                <h4>Create a new account.</h4>
                <hr />
                <div class="form-group" style="padding-bottom:20px">
                    <div style="float:left; padding-right:10px; padding-bottom:20px" class="col-md-6">
                        <input asp-for="Input.FirstName" placeholder="First Name" class="form-control" />
                    </div>
                    <div style="float:right;  padding-left:10px; padding-bottom:20px" class="col-md-6">
                        <input asp-for="Input.LastName" placeholder="Last Name" class="form-control" />
                    </div>
                </div>
                <div style="padding-bottom:20px" class="form-group">
                    <input asp-for="Input.MobileNumber" placeholder="Mobile Number" class="form-control" />
                </div>
                <div style="padding-bottom:20px" class="form-group">
                    <input asp-for="Input.Email" placeholder="Email Address" class="form-control" />
                </div>
                <div class="form-group" style="padding-bottom:20px">
                    <div style="float:left; padding-right:10px; padding-bottom:20px" class="col-md-6">
                        <input asp-for="Input.Region" placeholder="Region" class="form-control" />
                    </div>
                    <div style="float:right;  padding-left:10px; padding-bottom:20px" class="col-md-6">
                        <input asp-for="Input.Province" placeholder="Province" class="form-control" />
                    </div>
                </div>
                <div class="form-group" style="padding-bottom:20px">
                    <div style="float:left; padding-right:10px; padding-bottom:20px" class="col-md-6">
                        <input asp-for="Input.City" placeholder="City" class="form-control" />
                    </div>
                    <div style="float:right;  padding-left:10px; padding-bottom:20px" class="col-md-6">
                        <input asp-for="Input.PostalCode" placeholder="Postal Code" class="form-control" />
                    </div>
                </div>
                <div style="padding-bottom:20px" class="form-group">
                    <input asp-for="Input.Barangay" placeholder="Barangay" class="form-control" />
                </div>
                <div style="padding-bottom:15px">
                    <button type="submit" class="btn btn-primary" style="padding-left:100px; padding-right:100px">Register</button>
                </div>
                <div>
                     <a asp-controller="Home" asp-action="Index" button type="submit" class="btn btn-primary" style="padding-left:114.5px; padding-right:114.5px">Back</a>
                </div>
            </form>
        </div>
    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
